def choose_word():
  word = "balloon"
  return word
  

secretWord = choose_word
guessesLeft = 0

def blankCreator(y):
  blankList = []
  blankString = ""
  for x in y:
    blankList = blankList + ["_ "]
  blankString = blankString.join(blankList)
  return blankString

while guessesLeft > 0:
    letterGuess = input("Please guess a letter. ")
    print (letterGuess)
    guessesLeft = guessesLeft - 1

def print_body(number):
  if number == 1:
    print("  (_)\nYou have 5 guesses left.")
  if number == 2:
    print("  (_)  ")
    print("   |   ")
    print("   |\nYou have 4 guesses left.")
  if number == 3:
    print("  (_)  ")
    print("  /|   ")
    print("   |\nYou have 3 guesses left.")
  if number == 4:
    print("  (_)  ")
    print("  /|\  ")
    print("   |\nYou have 2 guesses left.")
  if number == 5:
    print("  (_)  ")
    print("  /|\  ")
    print("   |  ")
    print("  /\nYou have 1 guesses left.")
  if number == 6:
    print("  (_)  ")
    print("  /|\  ")
    print("   |  ")
    print("  / \  ") 
    print("Game Over.")
    
def findLetter(word, letter, blank):
  if letter in word:
    letterIndex = word.index(letter)
    blank[letterIndex] = letter
    return blank
  else:
    return blank
    
def findLetter(x, y, z):
  while y in x:
    letterIndex = x.index(y)
    z[letterIndex] = list(y)
    return z
  else:
    return z

print (choose_word())
print (blankCreator(choose_word()))
