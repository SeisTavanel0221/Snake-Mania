words = input("Please enter a string to be evaluated. ")

def countVowels(y):
  numVowels = 0
  for x in y.lower():
    if x == "a":
      numVowels = numVowels + 1
    elif x == "e":
      numVowels = numVowels + 1
    elif x == "i":
      numVowels = numVowels + 1
    elif x == "o":
      numVowels = numVowels + 1
    elif x == "u":
      numVowels = numVowels + 1
    elif x == 'y':
      numVowels = numVowels + 1
  return numVowels


print ("The string " + words + " has " + str(countVowels(words)) + " vowels.")
