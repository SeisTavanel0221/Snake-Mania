monthDay = int(input("Please enter a number day of the month. "))
monthName = input("Please enter the month you wish to use with a capital first letter. ")
      
def whatDayOfTheWeek(x,y):
  if x == "January":
    while y > 7:
      y = y - 7
    while y <= 7:
      if y == 1:
        return "Wednesday"
      elif y == 2:
        return "Thursday"
      elif y == 3:
        return "Friday"
      elif y == 4:
        return "Saturday"
      elif y == 5:
        return "Sunday"
      elif y == 6:
        return "Monday"
      else:
        return "Tuesday"
  if x == "Febuary":
