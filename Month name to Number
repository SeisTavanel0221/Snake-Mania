monthName = input("Please enter the month you wish to use with a capital first letter. ")

def monthToNumber(x):
  if x == "January":
    return 1
  if x == "Febuary":
    return 2
  if x == "March":
    return 3
  if x == "April":
    return 4
  if x == "May":
    return 5
  if x == "June":
    return 6
  if x == "July":
    return 7
  if x == "August":
    return 8
  if x == "September":
    return 9
  if x == "October":
    return 10
  if x == "November":
    return 11
  if x == "December":
    return 12
  else:
    return 13

if monthToNumber(monthName) > 12:
  monthName = input("Make sure the month is spelled correctly and the first letter is capitalized. ")

if monthToNumber(monthName) < 13:
  print (monthName + ' is the number ' + str(monthToNumber(monthName)) + ' month of the year.')
